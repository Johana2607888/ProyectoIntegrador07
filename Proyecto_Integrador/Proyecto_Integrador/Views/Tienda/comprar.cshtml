@model IEnumerable<Proyecto_Integrador.Model.Item>

@{
    ViewBag.Title = "comprar";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<section class="panel-primary" style="width:98%;background-color:#fff;">
    <section class="panel-heading" style="background-color:#0DB8B1">
        PROCESO DE COMPRA DE ARTICULOS
    </section>
    <section class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.subtotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.foto)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.subtotal)
                    </td>
                    <td>
                        <img id="imgProPeq" src="@Url.Content(item.foto)" />
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "eliminaProducto",
                                         new {  id=item.codigo },new { @class="btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
        @Html.ActionLink("COMPRAR", "comprarProducto", "", new { @class = "btn btn-success" })
        @Html.ActionLink("SEGUIR COMPRANDO", "carritoCompras", "", new { @class = "btn btn-primary", @style = "margin-left:1050px" })
    </section>
</section>

<section>
    <h3 style="color:Highlight;">@Html.Label("TOTAL A PAGAR S/") @(((decimal)@ViewBag.total).ToString("0.00"))</h3>
</section>



<script>
    if ("@ViewBag.Error" != "")
            swal("@ViewBag.Error", "Para Continuar presione el Boton", "error");

        if ("@ViewBag.Success" != "")
            swal("@ViewBag.Success", "Para Continuar presione el Boton", "success");

        if ("@ViewBag.Info" != "")
            swal("@ViewBag.Info", "Para Continuar presione el Boton", "info");

</script>