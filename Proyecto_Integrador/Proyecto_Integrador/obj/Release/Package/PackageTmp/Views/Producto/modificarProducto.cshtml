    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

@*<h2>modificarProducto</h2>*@

@using (Html.BeginForm("modificarProducto", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
